{
  "name": "hadolint",
  "displayName": "hadolint",
  "description": "Integrates hadolint, a Dockerfile linter, into VS Code. Actively maintained fork with updated dependencies and modern tooling.",
  "author": {
    "name": "Tobias HochgÃ¼rtel",
    "url": "https://github.com/tobiashochguertel"
  },
  "license": "MIT",
  "version": "2.0.0",
  "publisher": "TobiasHochguertel",
  "icon": "hadolint.png",
  "homepage": "https://github.com/tobiashochguertel/vscode-hadolint",
  "bugs": {
    "url": "https://github.com/tobiashochguertel/vscode-hadolint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tobiashochguertel/vscode-hadolint.git"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "hadolint",
    "docker",
    "dockerfile",
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18"
  },
  "activationEvents": [
    "onLanguage:dockerfile"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Hadolint - A Dockerfile linter",
      "properties": {
        "hadolint.hadolintPath": {
          "type": "string",
          "default": "hadolint",
          "description": "Path to hadolint executable. Windows user, make sure you escape the back slash in the path, e.g, C:\\\\path\\to\\\\hadolint\\\\excutable"
        },
        "hadolint.cliOptions": {
          "type": "array",
          "default": [
            "--no-color"
          ],
          "description": "A list of supported hadolint CLI options"
        },
        "hadolint.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "hadolint.outputLevel": {
          "type": "string",
          "enum": [
            "error",
            "info",
            "warning",
            "hint"
          ],
          "default": "warning",
          "description": "Set the default output level of hadolint message."
        }
      }
    },
    "commands": [
      {
        "command": "hadolint.selectExecutable",
        "title": "Select Hadolint Executable",
        "category": "Hadolint"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node ./bin/build.js",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "npm run compile && sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "mocha": "^11.3.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  }
}
